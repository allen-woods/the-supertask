# GraphQL schema example
#
# https://gqlgen.com/getting-started/

input NewUser {
  email: String!
  name: String!
  userName: String!
  password: String!
}

type User {
  id: ID!
  email: String!
  name: String!
  userName: String!
  password: String!
}

type Query {
  me: User
  users: [User!]!
}

type Mutation {
  signUpUser(input: NewUser): User
  logInUser(email: String!, password: String!): User
  logOutUser: Boolean!
  deleteUser(id: ID!, confirmDelete: Boolean!): Boolean!
}
